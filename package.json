{
  "name": "nestjs-base-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "seed": "ts-node -r tsconfig-paths/register src/seed.ts",
    "preseed:clean": "ts-node -r tsconfig-paths/register src/seed-clean.ts",
    "seed:clean": "npm run seed"
  },
  "heroku-run-build-script": true,
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  },
  "dependencies": {
    "@automapper/classes": "^3.0.8",
    "@automapper/core": "^3.0.8",
    "@automapper/nestjs": "^3.0.8",
    "@nestjs/axios": "0.0.1",
    "@nestjs/common": "^7.5.1",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.5.1",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/microservices": "^7.6.12",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/platform-socket.io": "^7.6.11",
    "@nestjs/swagger": "^4.7.9",
    "@nestjs/typeorm": "^7.1.5",
    "@nestjs/websockets": "^7.6.11",
    "@types/geoip-lite": "^1.4.1",
    "@types/node": "14.18.3",
    "@types/uuid": "^8.3.1",
    "amqp-connection-manager": "^3.2.2",
    "amqplib": "^0.6.0",
    "aws-sdk": "^2.870.0",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "faker": "^5.5.3",
    "firebase-admin": "^9.10.0",
    "geoip-lite": "^1.4.2",
    "handlebars": "^4.7.6",
    "helper-markdown": "^1.0.0",
    "lodash": "^4.17.21",
    "mjml": "^4.7.1",
    "moment": "^2.29.1",
    "mysql": "^2.18.1",
    "nanoid": "^3.1.25",
    "nestjs-request-context": "0.0.2",
    "nodemailer": "^6.4.8",
    "passport": "^0.4.1",
    "passport-firebase-jwt": "^1.1.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.31",
    "typeorm-global-scopes": "^0.2.3",
    "typeorm-transactional-cls-hooked": "^0.1.20",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-cloudwatch": "^3.0.1",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@automapper/types": "^3.0.8",
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.3",
    "@nestjs/testing": "^7.5.1",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.5.8",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/passport-jwt": "^3.0.4",
    "@types/passport-local": "^1.0.33",
    "@types/request-ip": "0.0.37",
    "@types/socket.io": "^2.1.13",
    "@types/superagent": "4.1.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "onchange": "^7.1.0",
    "prettier": "^2.5.1",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
    "tsc": "^2.0.3",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
